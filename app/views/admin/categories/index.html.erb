<h1>カテゴリ一覧</h1>
<p><%= flash[:notice] %></p>

<table>
    <thead>
      <tr>
        <th>カテゴリ名</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.categories_name %></td>
          <td><%= link_to "編集",edit_admin_category_path(category), class: "custom-link" %></td>
        </tr>
      <% end %>
    </tbody>
</table>